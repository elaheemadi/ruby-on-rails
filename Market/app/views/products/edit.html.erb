<div class="row">
  <div class="col-md-6 col-md-offset-3 well">
<%= link_to "Back", products_path %>

<header><h1>Edit Products</h1></header>

<section>
        <%= form_for @product, method: :put do |f| %>
		   <div class="form-group">
                Product ID: <div class ="form-control"> <%= f.text_field :id %><br/>
				</div>
          </div>
           <div class="form-group">
                Product Name: <div class ="form-control"> <%= f.text_field :name %><br/>
				</div>
          </div>
           <div class="form-group">
                Product Description:  <div class ="form-control"><%= f.text_field :description %><br/>
				</div>
           </div>
		   <div class="form-group">
                Product Image: <div class ="form-control"> <%= f.text_field :image %><br/>
				</div>
          </div>
	      <div class="form-group">
                Price:  <div class ="form-control"><%= f.text_field :price%><br/>
				</div>
         </div>
		  <div class="form-group">
                Product Code:  <div class ="form-control"><%= f.text_field :code %><br/>
			</div>
         </div>
		  <div class="bb">
              <button type="button" class="btn btn-secondary btn-lg" >  <%= f.submit  "Commit" %></button>
        <% end %>
             </div>
</section>
 
  </div>
</div>
